#include <iostream>

int main() {

	std::cout << "Эта программа проверяе, каке число Вы ввели, чёное и нечётное\n";

	int number;

	std::cout << "Введите число: ";
	std::cin >> number;

	std::cout << "-----Проверяем-----\n";

	if (number % 2 == 0) {
		std::cout << "Число " << number << " — чётное";
	}
	else {
		std::cout << "Число " << number << " — нечётное";
	}
}
